        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="相性" />

    <RadioGroup
        android:id="@+id/CompatibilityGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
