        >
        <RadioButton android:id="@+id/Compatibility_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="とても良い"
            />
        <RadioButton android:id="@+id/coundition_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通"
            />
        <RadioButton android:id="@+id/coundition_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="よくない"
            />


    </RadioGroup>

</LinearLayout>

















