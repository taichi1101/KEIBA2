<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.android.sample.keiba.MainActivity">


<!--EditTextをみんなで編集して行く形にする-->
<!--EditTextの中身をサーバーから持って来て表示する-->
<!--間違えてるよースタンプが個人に対して送られる-->

<!--改行できなくする-->




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="レース情報" />

    <!--ここで馬データを入力させて、選択した馬の情報をポップアップで選択させる

    -->


    <Button
        android:id="@+id/Editing"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="編集" />
</LinearLayout>




<!--編集するが押されるまではtextviewにして、押されたらEditTextにする。保存が押されたらtextviewにする-->
<!--何なら、最後に編集した人の番号が入力され、通報もできるようにする-->
<!--このボタンが押されたら、編集できるようにする。もう一度押されえたら保存ボタンにテキストをかえる
動的に書くからそれはコードで書く-->




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距離:"
        android:layout_weight="1"/>

    <!--spinnerで選択できるようにする-->

    <!--<EditText-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/matal"/>-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2400m"
        android:layout_weight="1"
        android:id="@+id/matal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  頭数:"
        android:layout_weight="1"/>

    <!--<EditText-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/hourseCount"/>-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14頭"
        android:layout_weight="1"
        android:id="@+id/hourseCount"
        />


</LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出走馬一覧"
        android:layout_weight="1"
        android:id="@+id/hourse"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="キタサンブラック"
        android:layout_weight="1"
        android:id="@+id/kitasan"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="サイレンスすずか"
        android:layout_weight="1"
        android:id="@+id/silent"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="キングカメハメハ"
        android:layout_weight="1"
        android:id="@+id/kingkame"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ディープインパクト"
        android:layout_weight="1"
        android:id="@+id/deep"
        />


</LinearLayout>





<!--ここからは入力してもらうスタイル。ポップアツプで表示するようにする-->


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mental"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="精神状態" />

    <RadioGroup
        android:id="@+id/mentalGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mental_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悪い" />

        <RadioButton
            android:id="@+id/mental_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安定" />

        <RadioButton
            android:id="@+id/mental_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="良い" />
    </RadioGroup>
</LinearLayout>









<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/wet"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="馬場状態"  />

    <RadioGroup
        android:id="@+id/wetGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton android:id="@+id/wet_soBad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不良"
            />
        <RadioButton android:id="@+id/wet_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重"
            />
        <RadioButton android:id="@+id/wet_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="稍重"
            />

        <RadioButton android:id="@+id/wet_soGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 良"
            />

    </RadioGroup>

</LinearLayout>






<!--距離-->

<!--馬場状態-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/distance"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="距離" />

    <RadioGroup
        android:id="@+id/distanceGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton android:id="@+id/distance_1200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            />
        <RadioButton android:id="@+id/distance_1400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1400"
            />

        <RadioButton android:id="@+id/distance_1800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1800"
            />


        <RadioButton android:id="@+id/distance_2400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2400"
            />


    </RadioGroup>

</LinearLayout>









<!--できるだけラジオボタンで選択させる。これによってそれぞれの項目によってブレが出ない。もっとも近いものが選べる-->





<!--頭数-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/HeadCount"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:text="頭数" />

    <RadioGroup
        android:id="@+id/HeadCountGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton android:id="@+id/count_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8頭"
            />
        <RadioButton android:id="@+id/count_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10頭"
            />
        <RadioButton android:id="@+id/count_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12頭"
            />

        <RadioButton android:id="@+id/count16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16頭数"
            />

    </RadioGroup>

</LinearLayout>

<!--頭数などの決まり値は誰でも編奥できるものとして、マトリクスのグラフにする-->




<!--何なら出走情報も全てユーザー任せにして、自信をつけさせる-->



